<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Image and Camera Permissions -->
    <uses-permission android:name="android.permission.CAMERA" />

    <!-- Storage permissions for different Android versions -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <!-- WRITE permission needed for PDF export - remove maxSdkVersion restriction -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <!-- For Android 13+ (API 33+) -->
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />

    <!-- Camera hardware features -->
    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.autofocus"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.PatientRecords"
        android:requestLegacyExternalStorage="true"
        tools:targetApi="31">

        <!-- Main Activity -->
        <activity
            android:name=".activities.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.PatientRecords"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Add/Edit Patient Activity -->
        <activity
            android:name=".activities.AddEditPatientActivity"
            android:exported="false"
            android:parentActivityName=".activities.MainActivity"
            android:theme="@style/Theme.PatientRecords"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize|stateHidden" />

        <!-- Patient List Activity -->
        <activity
            android:name=".activities.PatientListActivity"
            android:exported="false"
            android:parentActivityName=".activities.MainActivity"
            android:theme="@style/Theme.PatientRecords" />

        <!-- Patient Detail Activity -->
        <activity
            android:name=".activities.PatientDetailActivity"
            android:exported="false"
            android:parentActivityName=".activities.MainActivity"
            android:theme="@style/Theme.PatientRecords" />

        <!-- Medical Record Activity -->
        <activity
            android:name=".activities.MedicalRecordActivity"
            android:exported="false"
            android:parentActivityName=".activities.PatientDetailActivity"
            android:theme="@style/Theme.PatientRecords"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize|stateHidden" />

        <!-- Medication Activity -->
        <activity
            android:name=".activities.MedicationActivity"
            android:exported="false"
            android:parentActivityName=".activities.PatientDetailActivity"
            android:theme="@style/Theme.PatientRecords"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize|stateHidden" />

        <!-- FileProvider for Camera Image Capture and PDF Sharing -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

    </application>

</manifest>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="@dimen/margin_xlarge">

    <!-- Large Emoji Icon -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸ‘¥"
        android:textSize="72sp"
        android:layout_marginBottom="@dimen/margin_large" />

    <!-- Main Message -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No Patients Yet"
        android:textSize="@dimen/text_size_header"
        android:textColor="@color/text_primary"
        android:textStyle="bold"
        android:layout_marginBottom="@dimen/margin_small" />

    <!-- Subtitle -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start building your patient database\nby adding your first patient"
        android:textSize="@dimen/text_size_medium"
        android:textColor="@color/text_secondary"
        android:gravity="center"
        android:lineSpacingMultiplier="1.2"
        android:layout_marginBottom="@dimen/margin_large" />

    <!-- Call to Action Button -->
    <com.google.android.material.button.MaterialButton
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add First Patient"
        android:textColor="@color/text_white"
        app:backgroundTint="@color/primary_blue"
        app:cornerRadius="@dimen/button_radius"
        app:icon="@drawable/ic_person_add"
        app:iconTint="@color/text_white" />

</LinearLayout>
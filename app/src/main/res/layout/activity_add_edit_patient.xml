<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_main"
    tools:context=".activities.AddEditPatientActivity">

    <!-- App Bar Layout -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_background"
        android:elevation="0dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/transparent"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:titleTextColor="@color/text_white"
            app:subtitleTextColor="@color/text_white" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Profile Image Section -->
            <androidx.cardview.widget.CardView
                style="@style/HealthcareCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_camera"
                            app:tint="@color/primary_blue"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Profile Photo"
                            android:textSize="18sp"
                            android:textColor="@color/text_primary"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/image_patient_profile"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/ic_person_placeholder"
                        app:civ_border_color="@color/primary_blue"
                        app:civ_border_width="3dp"
                        android:layout_marginBottom="16dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:contentDescription="Patient profile photo" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_select_image"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SELECT PHOTO"
                        android:textColor="@color/primary_blue"
                        app:strokeColor="@color/primary_blue"
                        app:cornerRadius="8dp"
                        app:icon="@drawable/ic_camera"
                        app:iconTint="@color/primary_blue" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Personal Information Section -->
            <androidx.cardview.widget.CardView
                style="@style/HealthcareCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <!-- Section Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="20dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_person"
                            app:tint="@color/primary_blue"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Personal Information"
                            android:textSize="18sp"
                            android:textColor="@color/text_primary"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <!-- Patient Name -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layout_patient_name"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:hint="Full Name *"
                        app:startIconDrawable="@drawable/ic_person"
                        app:startIconTint="@color/primary_blue">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edit_patient_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName|textCapWords"
                            android:maxLines="1" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Age Row (Date of Birth removed since Patient model doesn't have it) -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layout_age"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:hint="Age *"
                        app:startIconDrawable="@drawable/ic_calendar"
                        app:startIconTint="@color/primary_blue">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edit_age"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:maxLines="1" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Gender Selection - PROPERLY ALIGNED -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gender *"
                        android:textSize="12sp"
                        android:textColor="@color/primary_blue"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="0dp"
                        app:strokeWidth="1dp"
                        app:strokeColor="@color/surface_medium"
                        app:cardBackgroundColor="@color/card_background">

                        <RadioGroup
                            android:id="@+id/radio_group_gender"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="12dp"
                            android:gravity="center">

                            <RadioButton
                                android:id="@+id/radio_male"
                                android:layout_width="0dp"
                                android:layout_height="48dp"
                                android:layout_weight="1"
                                android:text="Male"
                                android:textSize="12sp"
                                android:textColor="@color/text_primary"
                                android:buttonTint="@color/primary_blue"
                                android:gravity="center"
                                android:checked="true" />

                            <RadioButton
                                android:id="@+id/radio_female"
                                android:layout_width="0dp"
                                android:layout_height="48dp"
                                android:layout_weight="1"
                                android:text="Female"
                                android:textSize="12sp"
                                android:textColor="@color/text_primary"
                                android:buttonTint="@color/primary_blue"
                                android:gravity="center" />

                            <RadioButton
                                android:id="@+id/radio_other"
                                android:layout_width="0dp"
                                android:layout_height="48dp"
                                android:layout_weight="1"
                                android:text="Other"
                                android:textSize="12sp"
                                android:textColor="@color/text_primary"
                                android:buttonTint="@color/primary_blue"
                                android:gravity="center" />

                        </RadioGroup>

                    </com.google.android.material.card.MaterialCardView>

                    <!-- Blood Type -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layout_blood_type"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Blood Type"
                        app:startIconDrawable="@drawable/ic_blood_type"
                        app:startIconTint="@color/danger_red">

                        <AutoCompleteTextView
                            android:id="@+id/spinner_blood_type"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            android:focusable="false" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Contact Information Section -->
            <androidx.cardview.widget.CardView
                style="@style/HealthcareCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <!-- Section Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="20dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_phone"
                            app:tint="@color/success_green"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Contact Information"
                            android:textSize="18sp"
                            android:textColor="@color/text_primary"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <!-- Phone Number (Email removed since Patient model doesn't have it) -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layout_phone"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:hint="Phone Number"
                        app:startIconDrawable="@drawable/ic_phone"
                        app:startIconTint="@color/primary_blue">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edit_phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="phone"
                            android:maxLines="1" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Address -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layout_address"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Home Address"
                        app:startIconDrawable="@drawable/ic_location"
                        app:startIconTint="@color/primary_blue">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edit_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPostalAddress|textMultiLine"
                            android:maxLines="3"
                            android:minLines="2" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Emergency Contact Section -->
            <androidx.cardview.widget.CardView
                style="@style/HealthcareCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <!-- Section Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="20dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_emergency"
                            app:tint="@color/danger_red"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Emergency Contact"
                            android:textSize="18sp"
                            android:textColor="@color/text_primary"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <!-- Emergency Contact Name and Phone Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- Emergency Contact Name -->
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/layout_emergency_contact"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            android:hint="Emergency Contact Name"
                            app:startIconDrawable="@drawable/ic_person"
                            app:startIconTint="@color/danger_red">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edit_emergency_contact"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="textPersonName|textCapWords"
                                android:maxLines="1" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <!-- Emergency Contact Phone -->
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/layout_emergency_phone"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:hint="Emergency Phone"
                            app:startIconDrawable="@drawable/ic_phone"
                            app:startIconTint="@color/danger_red">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edit_emergency_phone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="phone"
                                android:maxLines="1" />

                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Medical Information Section -->
            <androidx.cardview.widget.CardView
                style="@style/HealthcareCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <!-- Section Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="20dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_medical_record"
                            app:tint="@color/info_blue"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Medical Information"
                            android:textSize="18sp"
                            android:textColor="@color/text_primary"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <!-- Common Conditions Checkboxes - PROPERLY ALIGNED -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Common Medical Conditions"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="16dp">

                        <!-- First row of checkboxes -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="8dp">

                            <CheckBox
                                android:id="@+id/check_hypertension"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Hypertension"
                                android:textSize="13sp"
                                android:textColor="@color/text_primary"
                                android:buttonTint="@color/primary_blue"
                                android:padding="8dp" />

                            <CheckBox
                                android:id="@+id/check_diabetes"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Diabetes"
                                android:textSize="13sp"
                                android:textColor="@color/text_primary"
                                android:buttonTint="@color/primary_blue"
                                android:padding="8dp" />

                        </LinearLayout>

                        <!-- Second row of checkboxes -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <CheckBox
                                android:id="@+id/check_asthma"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Asthma"
                                android:textSize="13sp"
                                android:textColor="@color/text_primary"
                                android:buttonTint="@color/primary_blue"
                                android:padding="8dp" />

                            <CheckBox
                                android:id="@+id/check_heart_disease"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Heart Disease"
                                android:textSize="13sp"
                                android:textColor="@color/text_primary"
                                android:buttonTint="@color/primary_blue"
                                android:padding="8dp" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Other Medical Conditions -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layout_other_conditions"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:hint="Other Medical Conditions"
                        app:startIconDrawable="@drawable/ic_medical_record"
                        app:startIconTint="@color/primary_blue">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edit_other_conditions"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textMultiLine|textCapSentences"
                            android:maxLines="3"
                            android:minLines="2" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Allergies -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layout_allergies"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Known Allergies"
                        app:startIconDrawable="@drawable/ic_warning"
                        app:startIconTint="@color/warning_orange">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edit_allergies"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textMultiLine|textCapSentences"
                            android:maxLines="3"
                            android:minLines="2" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Registration Date Section -->
            <androidx.cardview.widget.CardView
                style="@style/HealthcareCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <!-- Section Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_schedule"
                            app:tint="@color/primary_blue"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Registration Details"
                            android:textSize="18sp"
                            android:textColor="@color/text_primary"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <!-- Registration Date Display and Change Button -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Registration Date"
                                android:textColor="@color/text_secondary"
                                android:textSize="12sp"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:id="@+id/text_registration_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="July 29, 2025"
                                android:textColor="@color/text_primary"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                tools:text="July 29, 2025" />

                        </LinearLayout>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/button_select_date"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Change Date"
                            android:textColor="@color/primary_blue"
                            app:strokeColor="@color/primary_blue"
                            app:cornerRadius="8dp"
                            app:icon="@drawable/ic_calendar"
                            app:iconTint="@color/primary_blue" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Action Buttons - PERFECTLY ALIGNED -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="32dp">

                <!-- Cancel Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_cancel"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="Cancel"
                    android:textColor="@color/text_secondary"
                    android:textStyle="bold"
                    app:strokeColor="@color/text_secondary"
                    app:cornerRadius="8dp"
                    app:icon="@drawable/ic_close"
                    app:iconTint="@color/text_secondary" />

                <!-- Save Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_save_patient"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="2"
                    android:layout_marginStart="8dp"
                    android:text="Save Patient"
                    android:textColor="@color/text_white"
                    android:textStyle="bold"
                    app:backgroundTint="@color/primary_blue"
                    app:cornerRadius="8dp"
                    app:icon="@drawable/ic_save"
                    app:iconTint="@color/text_white" />

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/surface_light"
    tools:context=".activities.MedicationActivity">

    <!-- App Bar -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/primary_blue"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/margin_medium">

            <!-- Patient Information Header -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_medium"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/primary_blue_light">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/margin_medium"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_medication"
                        app:tint="@color/text_white"
                        android:layout_marginEnd="@dimen/margin_medium" />

                    <TextView
                        android:id="@+id/text_patient_info"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Medication for: Patient Name"
                        android:textSize="18sp"
                        android:textColor="@color/text_white"
                        android:textStyle="bold"
                        tools:text="Medication for: Emily Davis" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Medication Information Form -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_medium"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/margin_large">

                    <!-- Form Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="@dimen/margin_large">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_medication"
                            app:tint="@color/primary_blue"
                            android:layout_marginEnd="@dimen/margin_small" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Medication Information"
                            android:textSize="20sp"
                            android:textColor="@color/text_primary"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <!-- Medication Name -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_medium"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        app:startIconDrawable="@drawable/ic_medication"
                        app:startIconTint="@color/primary_blue">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edit_medication_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Medication Name *"
                            android:inputType="textPersonName|textCapWords"
                            android:maxLines="1" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Dosage and Type Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="@dimen/margin_medium">

                        <!-- Dosage -->
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="@dimen/margin_small"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            app:startIconDrawable="@drawable/ic_dosage"
                            app:startIconTint="@color/primary_blue">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edit_dosage"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Dosage *"
                                android:inputType="text"
                                android:maxLines="1" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <!-- Medication Type -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Type *"
                                android:textSize="12sp"
                                android:textColor="@color/text_secondary"
                                android:layout_marginBottom="4dp" />

                            <Spinner
                                android:id="@+id/spinner_medication_type"
                                android:layout_width="match_parent"
                                android:layout_height="56dp"
                                android:background="@drawable/spinner_background"
                                android:padding="@dimen/margin_medium" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Frequency -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Frequency *"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginBottom="4dp" />

                    <Spinner
                        android:id="@+id/spinner_frequency"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="@drawable/spinner_background"
                        android:padding="@dimen/margin_medium"
                        android:layout_marginBottom="@dimen/margin_medium" />

                    <!-- Instructions -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_medium"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        app:startIconDrawable="@drawable/ic_instructions"
                        app:startIconTint="@color/primary_blue">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edit_instructions"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Instructions *"
                            android:inputType="textMultiLine"
                            android:maxLines="3"
                            android:minLines="2" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Date Information -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_medium"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/margin_large">

                    <!-- Date Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="@dimen/margin_medium">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_schedule"
                            app:tint="@color/primary_blue"
                            android:layout_marginEnd="@dimen/margin_small" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Treatment Period"
                            android:textSize="18sp"
                            android:textColor="@color/text_primary"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <!-- Start Date -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="@dimen/margin_medium">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Start Date *"
                                android:textSize="14sp"
                                android:textColor="@color/text_secondary"
                                android:layout_marginBottom="4dp" />

                            <EditText
                                android:id="@+id/edit_start_date"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:background="@drawable/date_input_background"
                                android:text="Today"
                                android:textSize="16sp"
                                android:textColor="@color/text_primary"
                                android:padding="@dimen/margin_medium"
                                android:focusable="false"
                                android:clickable="false"
                                tools:text="Aug 12, 2025" />

                        </LinearLayout>

                        <Button
                            android:id="@+id/button_change_start_date"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CHANGE"
                            android:textColor="@color/primary_blue"
                            app:strokeColor="@color/primary_blue"
                            android:layout_marginStart="@dimen/margin_medium" />

                    </LinearLayout>

                    <!-- End Date -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="End Date *"
                                android:textSize="14sp"
                                android:textColor="@color/text_secondary"
                                android:layout_marginBottom="4dp" />

                            <EditText
                                android:id="@+id/edit_end_date"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:background="@drawable/date_input_background"
                                android:text="30 days from now"
                                android:textSize="16sp"
                                android:textColor="@color/text_primary"
                                android:padding="@dimen/margin_medium"
                                android:focusable="false"
                                android:clickable="false"
                                tools:text="Sep 11, 2025" />

                        </LinearLayout>

                        <Button
                            android:id="@+id/button_change_end_date"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CHANGE"
                            android:textColor="@color/primary_blue"
                            app:strokeColor="@color/primary_blue"
                            android:layout_marginStart="@dimen/margin_medium" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Additional Information -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_medium"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/margin_large">

                    <!-- Additional Info Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="@dimen/margin_medium">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_doctor"
                            app:tint="@color/primary_blue"
                            android:layout_marginEnd="@dimen/margin_small" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Additional Information"
                            android:textSize="18sp"
                            android:textColor="@color/text_primary"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <!-- Doctor Name -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_medium"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        app:startIconDrawable="@drawable/ic_doctor"
                        app:startIconTint="@color/primary_blue">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edit_doctor_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Prescribing Doctor"
                            android:inputType="textPersonName|textCapWords"
                            android:maxLines="1" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Pharmacy -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_medium"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        app:startIconDrawable="@drawable/ic_pharmacy"
                        app:startIconTint="@color/primary_blue">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edit_pharmacy"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Pharmacy"
                            android:inputType="text|textCapWords"
                            android:maxLines="1" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Notes -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        app:startIconDrawable="@drawable/ic_notes"
                        app:startIconTint="@color/primary_blue">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edit_notes"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Additional Notes"
                            android:inputType="textMultiLine"
                            android:maxLines="4"
                            android:minLines="2" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="@dimen/margin_medium">

                <Button
                    android:id="@+id/button_clear_medication"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/margin_small"
                    android:text="Clear Form"
                    android:textColor="@color/text_secondary"
                    app:strokeColor="@color/text_secondary"
                    app:icon="@drawable/ic_clear"
                    app:iconTint="@color/text_secondary" />

                <Button
                    android:id="@+id/button_save_medication"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Save Medication"
                    android:textColor="@color/text_white"
                    app:backgroundTint="@color/primary_blue"
                    app:icon="@drawable/ic_save"
                    app:iconTint="@color/text_white" />

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
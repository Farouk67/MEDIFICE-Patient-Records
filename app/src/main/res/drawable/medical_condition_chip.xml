<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/condition_heart_disease" />
            <corners android:radius="16dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/condition_heart_disease_bg" />
            <corners android:radius="16dp" />
            <stroke android:width="1dp" android:color="@color/condition_heart_disease" />
        </shape>
    </item>
</selector>